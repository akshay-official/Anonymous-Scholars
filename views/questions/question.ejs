        }

        .question-date {
            font-size: 0.9rem;
            color: #555;
            margin-top: 10px;
        }

        /* Answers styling */
        .answers {
            margin-bottom: 20px;
        }

        .answer {
            background: #f8f9fa;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        .answer p {
            margin: 0;
            font-size: 1rem;
        }

        .answer-date {
            font-size: 0.9rem;
            color: #555;
            margin-top: 10px;
        }

        /* Comments styling */
        .comments {
            margin-top: 10px;
        }

        .comment {
            background: #f0f0f0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 5px;
        }

        .comment p {
            margin: 0;
            font-size: 0.9rem;
        }

        /* Form styling */
        form {
            display: flex;
            flex-direction: column;
        }

        form textarea {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 1rem;
            height: 100px;
        }

        form button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
        }

        form button:hover {
            background-color: #0056b3;
        }

        /* Button styling */
        button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: #fff;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #0056b3;
        }

        /* Additional styles for edit and delete buttons */
        .edit-answer,
        .delete-answer,
        .edit-comment,
        .delete-comment {
            margin-top: 10px;
        }

        .edit-answer,
        .edit-comment {
            background-color: #28a745;
        }

        .edit-answer:hover,
        .edit-comment:hover {
            background-color: #218838;
        }

        .delete-answer,
        .delete-comment {
            background-color: #dc3545;
        }

        .delete-answer:hover,
        .delete-comment:hover {
            background-color: #c82333;
        }

        /* Footer styling */
        footer {
            text-align: center;
            margin-top: 30px;
            color: #666;
            font-size: 0.9rem;
        }

        footer p {
            margin: 0;
        }

        .delete-answer {
            display: inline-block;
            /* Display as inline-block to appear in a single line */
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            background-color: #dc3545;
            color: #fff;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .delete-answer:hover {
            background-color: #c82333;
        }

        .action-buttons {
            display: flex;
            align-items: center;
            gap: 10px;
            /* Adjust gap as needed */
        }

        .inline-form {
            display: inline;
        }

        .edit-answer,
        .delete-answer {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            color: #fff;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .edit-answer {
            background-color: #28a745;
            /* Edit button color */
        }

        .delete-answer {
            background-color: #dc3545;
            /* Delete button color */
        }

        .edit-answer:hover {
            background-color: #218838;
            /* Hover color for edit button */
        }

        .delete-answer:hover {
            background-color: #c82333;
            /* Hover color for delete button */
        }

