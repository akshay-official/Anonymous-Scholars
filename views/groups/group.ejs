    crossorigin="anonymous"></script>
  <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Add click event listener to question divs
        document.querySelectorAll('.question').forEach(questionDiv => {
          questionDiv.addEventListener('click', (event) => {
            // Check if the click was on a username link
            if (event.target.classList.contains('username-link')) {
              return; // Do nothing if it was a username link click
            }
            
            // Otherwise, redirect to the question page
            const questionId = questionDiv.getAttribute('data-question-id');
            window.location.href = `/groups/<%= group.id %>/questions/${questionId}`;
          });
        });
      });
    </script>
    
</body>

</html>