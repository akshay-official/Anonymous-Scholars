</head>

<body>
  <header class="p-3 mb-3 border-bottom sticky-header">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                    <use xlink:href="#bootstrap"></use>
                </svg>
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 link-body-emphasis">Home</a></li>
                <li><a href="/groups/mygroups" class="nav-link px-2 link-body-emphasis">My Groups</a></li>
            </ul>

            <form method="POST" action="/search" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
                <input name="title" type="search" class="form-control" placeholder="Search..." aria-label="Search">
            </form>
            <% if(currUser){ %>
                <div class="dropdown text-end">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://w7.pngwing.com/pngs/178/595/png-transparent-user-profile-computer-icons-login-user-avatars-thumbnail.png"
                            alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small">
                        <li><a class="dropdown-item" href="/details">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a href="/logout" class="dropdown-item" href="#">Sign out</a></li>
                    </ul>

                </div>
                <% }else{ %>
                    <div class="col-md-3 d-flex justify-content-end">
                        <form method="GET" action="/signup" class="me-2">
                            <button type="submit" class="btn btn-outline-primary">Sign-up</button>
                        </form>
                        <form method="GET" action="/login">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </form>
                    </div>

                    <% } %>
        </div>
    </div>
</header>
  <main>
      <div class="p-5 text-center bg-body-tertiary rounded-3">
          <h1 class="text-body-emphasis">
              <%= group.title %>
          </h1>
          <p class="lead">
              <%= group.description %>
          </p>
          <p><strong>Admin:</strong> @<%= group.owner.username %></p>
          <div class="btn-group">
              <% if(!currUser || !isJoined2(currUser.groups, group._id)) { %>
                  <form action="/groups/<%= group._id %>/join" method="GET" class="me-2">
                      <button class="btn btn-sm btn-outline-secondary">Join</button>
                  </form>
              <% } %>
              <% if(currUser && currUser._id.toString() === group.owner._id.toString()){ %>
                  <form action="/groups/<%= group._id %>/edit" method="GET" class="me-2">
                      <button class="btn btn-sm btn-outline-secondary">Edit</button>
                  </form>
                  <form action="/groups/<%= group._id %>?_method=DELETE" method="POST" class="me-2">
                      <button class="btn btn-sm btn-outline-secondary">Delete</button>
                  </form>
              <% } %>
          </div>
      </div>

  
    <form method="POST" action="/groups/<%= group.id%>/questions" id="add-question-form">
      <input name="body" type="text" id="new-question" placeholder="Type your question here..." required>
      <button type="submit">Add Question</button>
    </form>
    <% if(group.questions.length) { %>
      <% for(let i=group.questions.length - 1; i >= 0; i--) { %>
        <div class="question" data-question-id="<%= group.questions[i]._id %>">
          <p>
            <strong>
              <a href="/users/<%= group.questions[i].author._id %>" class="username-link">
                @<%= group.questions[i].author.username %>
              </a>:
            </strong>
            <%= group.questions[i].body %>
          </p>
          <div class="question-footer">
            <p class="responses">
              <%= group.questions[i].answers.length %> responses
            </p>
            <p class="question-date">
              <i><%= formatDate(group.questions[i].date) %></i>
            </p>
          </div>
        </div>
      <% } %>
    <% } else {%>
            <div class="no-posts">No posts available</div>
            <% } %>


  </main>
  <footer>
    <p>&copy; 2024 Anonymous Scholars. All rights reserved.</p>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
